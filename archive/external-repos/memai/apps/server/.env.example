# ============================================
# ============================================
# Memai SaaS Platform - Server Environment Variables
# ============================================

# 数据库 (PostgreSQL with pgvector)
DATABASE_URL="postgresql://user:password@host:5432/memai?schema=public"

# Redis (用于 BullMQ 队列和缓存)
REDIS_URL="redis://localhost:6379"

# 环境
NODE_ENV="production"

# 服务端口
PORT="3000"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production-min-32-chars"
BETTER_AUTH_URL="https://server.memai.dev"

# CORS - 允许的前端来源（生产环境必须配置）
ALLOWED_ORIGINS="https://memai.dev,https://console.memai.dev,https://admin.memai.dev"

# Better Auth 信任的来源（用于 CSRF 保护）
TRUSTED_ORIGINS="https://memai.dev,https://console.memai.dev,https://admin.memai.dev"

# Creem 支付
CREEM_API_KEY="your-creem-api-key"
CREEM_WEBHOOK_SECRET="your-creem-webhook-secret"
CREEM_TEST_MODE="false"

# 服务器公网 URL（用于回调）
SERVER_URL="https://server.memai.dev"

# Resend 邮件服务（邮箱验证码）
# 获取地址：https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxx"
EMAIL_FROM="Memai <noreply@memai.dev>"

# ============================================
# Embedding & LLM Configuration
# ============================================

# Provider 选择 (openai 或其他)
EMBEDDING_PROVIDER="openai"
LLM_PROVIDER="openai"

# OpenAI API Key (用于 Embedding 和 LLM)
OPENAI_API_KEY="sk-..."

# 模型配置
EMBEDDING_MODEL="text-embedding-3-small"
LLM_MODEL="gpt-4o-mini"

# ============================================
# Optional Configuration
# ============================================

# Cloudflare Turnstile Secret Key（用于验证 Demo Playground 验证码）
# 获取地址：https://dash.cloudflare.com/?to=/:account/turnstile
TURNSTILE_SECRET_KEY="0x4AAAAAAA..."
