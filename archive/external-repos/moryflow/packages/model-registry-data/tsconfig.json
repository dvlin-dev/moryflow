{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedSideEffectImports": true,
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
