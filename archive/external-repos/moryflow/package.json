{
  "name": "moryflow",
  "scripts": {
    "dev:web": "pnpm -C apps/web dev",
    "dev:mobile": "pnpm -C apps/mobile start",
    "dev:server": "pnpm --filter @moryflow/server start:dev",
    "dev:admin": "pnpm --filter @moryflow/admin dev",
    "build:server": "pnpm --filter @moryflow/server build",
    "build:admin": "pnpm --filter @moryflow/admin build",
    "deploy:vectorize": "pnpm --filter @moryflow/vectorize deploy",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "build:agents:prebuild": "pnpm -r --filter '@moryflow/agents*' prebuild",
    "build:agents": "pnpm run build:agents:prebuild && tsc-multi",
    "build:shared": "pnpm -r --filter './packages/shared-*' --if-present build",
    "build:packages": "pnpm run build:shared && pnpm run build:agents",
    "postinstall": "pnpm run build:packages"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "tsc-multi": "^1.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.1",
      "@types/react": "19.1.17",
      "@types/react-dom": "19.1.9"
    }
  }
}
