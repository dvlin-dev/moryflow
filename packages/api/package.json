{
  "name": "@moryflow/api",
  "version": "1.0.0",
  "description": "共享 API 类型和常量，供 PC 和 Mobile 共用",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "require": "./dist/client/index.cjs",
      "import": "./dist/client/index.mjs"
    },
    "./cloud-sync": {
      "types": "./dist/cloud-sync/index.d.ts",
      "require": "./dist/cloud-sync/index.cjs",
      "import": "./dist/cloud-sync/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc-multi",
    "clean": "rm -rf dist",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@moryflow/sync": "workspace:*",
    "@moryflow/types": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
