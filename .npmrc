shamefully-hoist=true
auto-install-peers=true
dedupe-peer-dependents=false

# 支持多平台（确保 CI Linux 环境有正确的二进制包）
supportedArchitectures[os]=linux,darwin
supportedArchitectures[cpu]=x64,arm64

# 允许废弃版本警告静默
allowedDeprecatedVersions['@humanwhocodes/eslint-plugin-commit-message']='*'
allowedDeprecatedVersions['@humanwhocodes/config-array']='*'
allowedDeprecatedVersions['glob']='*'

# 信任的包（允许运行构建脚本）
onlyBuiltDependencies=@nestjs/core,@prisma/engines,@swc/core,esbuild,prisma,sharp,msgpackr-extract
