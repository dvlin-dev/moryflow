{
  "name": "aiget",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Aiget - Unified Platform (Flowx + Fetchx + Memox + Sandx)",
  "scripts": {
    "dev:flowx": "pnpm --filter @aiget/flowx-server start:dev",
    "dev:fetchx": "pnpm --filter @aiget/fetchx-server start:dev",
    "dev:fetchx:www": "pnpm --filter @aiget/fetchx-www dev",
    "dev:memox": "pnpm --filter @aiget/memox-server start:dev",
    "dev:memox:www": "pnpm --filter @aiget/memox-www dev",
    "dev:auth": "pnpm --filter @aiget/auth-server start:dev",
    "dev:console": "pnpm --filter @aiget/console dev",
    "dev:admin": "pnpm --filter @aiget/admin dev",
    "dev:moryflow:pc": "pnpm --filter @aiget/moryflow-pc dev",
    "build": "turbo run build",
    "build:agents:prebuild": "pnpm -r --filter '@aiget/agents*' prebuild",
    "build:agents": "pnpm run build:agents:prebuild && tsc-multi",
    "build:packages": "pnpm run build:agents",
    "postinstall": "pnpm run build:packages",
    "build:flowx": "pnpm --filter @aiget/flowx-server build",
    "build:fetchx": "pnpm --filter @aiget/fetchx-server build",
    "build:memox": "pnpm --filter @aiget/memox-server build",
    "build:memox:www": "pnpm --filter @aiget/memox-www build",
    "build:auth": "pnpm --filter @aiget/auth-server build",
    "build:console": "pnpm --filter @aiget/console build",
    "build:admin": "pnpm --filter @aiget/admin build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@rollup/rollup-linux-x64-gnu": "4.54.0",
    "@swc/core-linux-x64-gnu": "1.15.8",
    "@types/node": "^22.18.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lightningcss-linux-x64-gnu": "1.30.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sass-embedded-linux-x64": "1.97.1",
    "tsc-multi": "^1.1.0",
    "turbo": "^2.4.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.12",
      "lightningcss": "1.30.1",
      "@types/react": "19.1.17",
      "@types/react-dom": "19.1.9"
    },
    "supportedArchitectures": {
      "os": [
        "linux",
        "darwin",
        "win32"
      ],
      "cpu": [
        "x64",
        "arm64"
      ]
    }
  }
}
