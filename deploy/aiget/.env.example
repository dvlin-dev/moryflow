## Aiget (8c16g) deploy env
## Copy to `.env` and fill values.

# -----------------------------------------------------------------------------
# Public domains
# -----------------------------------------------------------------------------
PUBLIC_BASE_URL=https://aiget.dev

# -----------------------------------------------------------------------------
# Ports (host)
# -----------------------------------------------------------------------------
AIGET_SERVER_PORT=3100
AIGET_WWW_PORT=3103
AIGET_CONSOLE_PORT=3102
AIGET_ADMIN_PORT=3101
AIGET_DOCS_PORT=3110

# Database / Redis ports exposed on host (for local debugging)
AIGET_POSTGRES_PORT=5432
AIGET_REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Postgres
# -----------------------------------------------------------------------------
POSTGRES_DB=aiget
POSTGRES_USER=aiget
POSTGRES_PASSWORD=change_me

# Used by apps/aiget/server (Prisma)
DATABASE_URL=postgresql://aiget:change_me@aiget-postgres:5432/aiget?schema=public

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://aiget-redis:6379

# -----------------------------------------------------------------------------
# Frontend build-time env (Vite embeds these)
# -----------------------------------------------------------------------------
VITE_API_URL=https://aiget.dev
VITE_AUTH_URL=
VITE_TURNSTILE_SITE_KEY=

