## Moryflow (4c6g) deploy env
## Copy to `.env` and fill values.

# -----------------------------------------------------------------------------
# Ports (host)
# -----------------------------------------------------------------------------
MORYFLOW_SERVER_PORT=3100
MORYFLOW_WWW_PORT=3102
MORYFLOW_DOCS_PORT=3103
MORYFLOW_ADMIN_PORT=3101
MORYFLOW_APP_PORT=3105

# 必填：生产环境 CORS 允许来源（逗号分隔）
ALLOWED_ORIGINS=https://www.moryflow.com,https://admin.moryflow.com,https://server.moryflow.com

# Database / Redis ports exposed on host (for local debugging)
MORYFLOW_POSTGRES_PORT=5432
MORYFLOW_REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Postgres
# -----------------------------------------------------------------------------
POSTGRES_DB=moryflow
POSTGRES_USER=moryflow
POSTGRES_PASSWORD=change_me

DATABASE_URL=postgresql://moryflow:change_me@moryflow-postgres:5432/moryflow?schema=public

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://moryflow-redis:6379

# -----------------------------------------------------------------------------
# Frontend build-time env (Vite embeds these)
# -----------------------------------------------------------------------------
VITE_API_URL=https://server.moryflow.com
