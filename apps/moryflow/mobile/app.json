{
  "expo": {
    "name": "moryflow",
    "slug": "moryflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "moryflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "bundleIdentifier": "com.dvlindev.mobile.v2"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.dvlindev.mobile.v2"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "expo-apple-authentication",
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "MoryFlow securely reads your Apple Health data on-device to surface personal insightsâ€”nothing leaves your device without permission.",
          "NSHealthUpdateUsageDescription": "MoryFlow writes optional mood or mindfulness entries to Apple Health so your personal history stays complete across devices.",
          "background": true
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "228e8949-68aa-4b1e-9c92-3689e60d03c7"
      }
    },
    "runtimeVersion": "1.0.0",
    "owner": "dvlindev"
  }
}
