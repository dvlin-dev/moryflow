{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@moryflow/api/client": ["../../../packages/api/src/client/index.ts"],
      "@moryflow/types": ["../../../packages/types/src/index.ts"],
      "@moryflow/types/*": ["../../../packages/types/src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"]
}
